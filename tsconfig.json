{
    "compilerOptions": {
      "strict": true,
      "target": "ESNext",
      "module": "ESNext",
      "removeComments": false,
      "preserveConstEnums": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "noImplicitAny": true,
      "allowSyntheticDefaultImports": true,
      "outDir": "lib",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "strictNullChecks": true,
      "sourceMap": true,
      "baseUrl": ".",
      "rootDir": ".",
      "jsx": "preserve",
      "jsxImportSource": "vue",
      "jsxFactory": "h",
      "jsxFragmentFactory": "Fragment",
      "allowJs": true,
      "resolveJsonModule": true,
      "noEmit": true,
      "allowImportingTsExtensions": true,
      "typeRoots": [
        "node_modules/@types"
      ],
      "paths": {
        "@/*": [
          "src/*"
        ],
        "~/*": [
          "src/*"
        ]
      },
    },
    "include": [
      "src/**/*",
      "types/**/*.d.ts"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts",
      "/types"
    ]
  }